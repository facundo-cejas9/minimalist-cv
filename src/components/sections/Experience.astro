---
import Sections from "../Sections.astro";
import { work } from "../../cv.json";
---

<Sections title="Experiencia">
    <ul>
        {
            work.map(
                ({ organization, position, summary, startDate, endDate }) => {
                    const startYEar = new Date(startDate).getFullYear();
                    const endYear =
                        endDate != null
                            ? new Date(endDate).getFullYear()
                            : "Current";
                    const years = `${startYEar} - ${endYear}`;
                    return (
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>{organization}</h3>
                                        <h4>{position}</h4>
                                    </div>
                                    <time>{years}</time>
                                </header>
                                <footer>
                                    <p>{summary}</p>
                                </footer>
                            </article>
                        </li>
                    );
                },
            )
        }
    </ul>
</Sections>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap:32px;
        margin: 0;
        padding: 0;
    }
    article h3 {
        font-weight: 500;
        color:#111;
    }

    article h4 {
        color:#222;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    time {
        font-size: 0.8rem;
        color: #555
    }

    
</style>
