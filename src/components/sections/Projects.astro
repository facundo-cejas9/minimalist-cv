---
import Sections from "../Sections.astro";
import { projects } from "../../cv.json";
---

<Sections title="Proyectos">
    <ul>
        {
            projects.map(
                ({ name, description, tecnologies, url, isActive }) => {
                    return (
                        <li>
                            <article>
                                <header>
                                    <a
                                        href={url}
                                        title={`Ver proyecto ${name}`}
                                    >
                                        <h3>{name}</h3>
                                    </a>
                                    <p>{description}</p>
                                </header>

                                <footer >
                                    
                                        {tecnologies.map((tec) => {
                                            return <span>{tec}</span>;
                                        })}
                                    
                                </footer>
                            </article>
                        </li>
                    );
                },
            )
        }
    </ul>
</Sections>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        padding: 0;
        list-style: none;
    }

   article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 1rem;
    height: 100%;
   }

   article header {
    flex: 1;
   }

  article h3 {
    margin-bottom: 4px;
  }

  article p {
    font-size: 0.9rem;
    font-family: monospace;
    line-height: 1.2rem;
  }

  article a {
    color: #111
  }

  article a:hover {
    text-decoration: underline;
  }


   footer {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: .6rem;
    margin-top: 1rem;
   }

   footer span {
    font-size: 0.8rem;
    background-color: #f2f2f2;
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    font-weight: 600;
    font-family: monospace
   }
</style>
